{
  "name": "clipster",
  "version": "1.1.13",
  "description": "A VS Code extension to copy paths, folder structures, and contents with customization.",
  "main": "src/extension.js",
  "publisher": "jesperwilfing",
  "scripts": {
    "clean": "rimraf ./out",
    "build": "npx @vscode/vsce package",
    "bump-build": "standard-version && yarn build",
    "clean-build-install": "yarn clean && yarn bump-build && yarn install-extension",
    "install-extension": "node ./build.js",
    "release": "standard-version",
    "vscode:prepublish": "yarn clean && yarn build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/TheJesper/clipster"
  },
  "keywords": [
    "vscode",
    "extension",
    "clipboard",
    "root path",
    "folder structure",
    "file content"
  ],
  "author": "jesperwilfing",
  "license": "MIT",
  "devDependencies": {
    "@vscode/vsce": "^2.15.0",
    "standard-version": "^9.3.2",
    "rimraf": "^3.0.2"
  },
  "icon": "resources/icon.png",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:clipster.copyFileContentWithHeader",
    "onCommand:clipster.copyFolderStructure",
    "onCommand:clipster.copyFolderStructureAndContent",
    "onCommand:clipster.copyRootFolderPath",
    "onCommand:clipster.copyRootFolderStructure",
    "onCommand:clipster.copyRootFolderStructureAndContent"
  ],
  "contributes": {
    "commands": [
      {
        "command": "clipster.copyFileContentWithHeader",
        "title": "üìù Copy File Content with Path",
        "category": "Clipster"
      },
      {
        "command": "clipster.copyFolderStructure",
        "title": "üìÅ Copy Folder Structure",
        "category": "Clipster"
      },
      {
        "command": "clipster.copyFolderStructureAndContent",
        "title": "üìÅ Copy Folder Structure and Content",
        "category": "Clipster"
      },
      {
        "command": "clipster.copyRootFolderPath",
        "title": "üìÅ Copy Root Folder Path",
        "category": "Clipster"
      },
      {
        "command": "clipster.copyRootFolderStructure",
        "title": "üìÅ Copy Root Folder Structure",
        "category": "Clipster"
      },
      {
        "command": "clipster.copyRootFolderStructureAndContent",
        "title": "üìù Copy Root Folder Structure and Content",
        "category": "Clipster"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "clipster.copyFileContentWithHeader",
          "when": "explorerResourceIsFile",
          "group": "navigation",
          "submenu": "Clipster"
        },
        {
          "command": "clipster.copyRootFolderPath",
          "when": "explorerResourceIsFile || explorerResourceIsFolder",
          "group": "navigation",
          "submenu": "Clipster"
        },
        {
          "command": "clipster.copyRootFolderStructure",
          "when": "explorerResourceIsFile || explorerResourceIsFolder",
          "group": "navigation",
          "submenu": "Clipster"
        },
        {
          "command": "clipster.copyRootFolderStructureAndContent",
          "when": "explorerResourceIsFile || explorerResourceIsFolder",
          "group": "navigation",
          "submenu": "Clipster"
        },
        {
          "command": "clipster.copyFolderStructure",
          "when": "explorerResourceIsFolder",
          "group": "navigation",
          "submenu": "Clipster"
        },
        {
          "command": "clipster.copyFolderStructureAndContent",
          "when": "explorerResourceIsFolder",
          "group": "navigation",
          "submenu": "Clipster"
        }
      ],
      "submenus": {
        "Clipster": {
          "label": "Clipster"
        }
      }
    }
  }
}
