{
  "name": "clipster",
  "displayName": "Clipster",
  "version": "1.1.99",
  "description": "A VS Code extension to copy paths, folder structures, and contents with customization.",
  "main": "src/extension.js",
  "activationEvents": [
    "onCommand:clipster.copyFileContentWithHeader",
    "onCommand:clipster.copyFolderStructure",
    "onCommand:clipster.copyFolderStructureAndContent",
    "onCommand:clipster.copyRootFolderPath",
    "onCommand:clipster.copyRootFolderStructure",
    "onCommand:clipster.copyRootFolderStructureAndContent"
  ],
  "publisher": "jesperwilfing",
  "scripts": {
    "clean": "rimraf ./out",
    "build": "node getVersion.js && node -e \"const fs = require('fs'); const version = fs.readFileSync('.version', 'utf8').trim(); if (!fs.existsSync('./out')) { fs.mkdirSync('./out'); } require('child_process').execSync(`vsce package --out ./out/clipster-${version}.vsix`, {stdio: 'inherit'})\"",
    "bump-build": "standard-version && npm run build",
    "clean-build-install": "npm run clean && npm run bump-build && npm run install-extension",
    "install-extension": "node ./build.js",
    "release": "standard-version"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/TheJesper/clipster"
  },
  "keywords": [
    "vscode",
    "extension",
    "clipboard",
    "root path",
    "folder structure",
    "file content"
  ],
  "author": "jesperwilfing",
  "license": "MIT",
  "devDependencies": {
    "@vscode/vsce": "^2.15.0",
    "rimraf": "^3.0.2",
    "standard-version": "^9.3.2"
  },
  "dependencies": {
    "ignore": "^6.0.2"
  },
  "icon": "resources/icon.png",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "contributes": {
    "commands": [
      {
        "command": "clipster.copyFileContentWithHeader",
        "title": "📝 Copy File Content with Path"
      },
      {
        "command": "clipster.copyFolderStructure",
        "title": "📁 Copy Folder Structure"
      },
      {
        "command": "clipster.copyFolderStructureAndContent",
        "title": "📁 Copy Folder Structure and Content"
      },
      {
        "command": "clipster.copyRootFolderPath",
        "title": "📁 Copy Root Folder Path"
      },
      {
        "command": "clipster.copyRootFolderStructure",
        "title": "📁 Copy Root Folder Structure"
      },
      {
        "command": "clipster.copyRootFolderStructureAndContent",
        "title": "📝 Copy Root Folder Structure and Content"
      }
    ],
    "submenus": [
      {
        "id": "clipsterMenu",
        "label": "Clipster 📁"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "submenu": "clipsterMenu",
          "group": "navigation"
        }
      ],
      "clipsterMenu": [
        {
          "command": "clipster.copyFileContentWithHeader"
        },
        {
          "command": "clipster.copyFolderStructure"
        },
        {
          "command": "clipster.copyFolderStructureAndContent"
        },
        {
          "command": "clipster.copyRootFolderPath"
        },
        {
          "command": "clipster.copyRootFolderStructure"
        },
        {
          "command": "clipster.copyRootFolderStructureAndContent"
        }
      ]
    }
  }
}
