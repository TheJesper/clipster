{
  "name": "clipster",
  "displayName": "Clipster",
  "version": "1.1.202",
  "description": "A VS Code extension to copy paths, folder structures, and contents with customization.",
  "icon": "resources/icon.png",
  "activationEvents": [
    "onStartupFinished",
    "onCommand:clipster.copyFileContentWithHeader",
    "onCommand:clipster.copyFolderStructure",
    "onCommand:clipster.copyFolderStructureAndContent",
    "onCommand:clipster.copyRootFolderPath",
    "onCommand:clipster.copyRootFolderStructure",
    "onCommand:clipster.copyRootFolderStructureAndContent"
  ],
  "type": "module",
  "main": "./src/extension.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/TheJesper/clipster.git"
  },
  "publisher": "jesperwilfing",
  "mocha": {
    "require": [
      "esm"
    ],
    "extensions": [
      "js",
      "mjs"
    ]
  },
  "scripts": {
    "test": "mocha --require esm --recursive test/**/*.test.js",
    "build": "npm run clean && npm test && node build.js",
    "clean": "rimraf ./out",
    "bump-build": "standard-version --no-verify && npm run build",
    "clean-build-install": "npm run clean && npm run bump-build && npm run install-extension",
    "install-extension": "node build.js",
    "release": "standard-version"
  },
  "devDependencies": {
    "@types/vscode": "^1.93.0",
    "@vscode/test-electron": "^2.4.1",
    "@vscode/vsce": "^2.15.0",
    "chai": "^5.1.1",
    "esm": "^3.2.25",
    "mocha": "^10.7.3",
    "mock-fs": "^5.3.0",
    "mock-require": "^3.0.3",
    "rimraf": "^3.0.2",
    "standard-version": "^9.3.2"
  },
  "engines": {
    "vscode": "^1.93.0"
  },
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Clipster Settings",
      "properties": {
        "clipster.showCopyFileContentWithHeader": {
          "type": "boolean",
          "default": true,
          "description": "Enable Copy File Content with Path."
        },
        "clipster.showCopyFolderStructure": {
          "type": "boolean",
          "default": true,
          "description": "Enable Copy Folder Structure."
        },
        "clipster.showCopyFolderStructureAndContent": {
          "type": "boolean",
          "default": true,
          "description": "Enable Copy Folder Structure and Content."
        },
        "clipster.showCopyRootFolderPath": {
          "type": "boolean",
          "default": true,
          "description": "Enable Copy Root Folder Path."
        },
        "clipster.showCopyRootFolderStructure": {
          "type": "boolean",
          "default": true,
          "description": "Enable Copy Root Folder Structure."
        },
        "clipster.showCopyRootFolderStructureAndContent": {
          "type": "boolean",
          "default": true,
          "description": "Enable Copy Root Folder Structure and Content."
        },
        "clipster.showInClipsterSubmenu": {
          "type": "boolean",
          "default": true,
          "description": "Show Clipster commands in submenu."
        },
        "clipster.additionalIgnores": {
          "type": "array",
          "default": [],
          "description": "Additional file patterns to ignore when copying folder structures."
        }
      }
    },
    "commands": [
      {
        "command": "clipster.copyFileContentWithHeader",
        "title": "üìù Copy File Content with Path"
      },
      {
        "command": "clipster.copyFolderStructure",
        "title": "üìÅ Copy Folder Structure"
      },
      {
        "command": "clipster.copyFolderStructureAndContent",
        "title": "üìÅ Copy Folder Structure and Content"
      },
      {
        "command": "clipster.copyRootFolderPath",
        "title": "üìÅ Copy Root Folder Path"
      },
      {
        "command": "clipster.copyRootFolderStructure",
        "title": "üìÅ Copy Root Folder Structure"
      },
      {
        "command": "clipster.copyRootFolderStructureAndContent",
        "title": "üìù Copy Root Folder Structure and Content"
      }
    ],
    "submenus": [
      {
        "id": "clipsterMenu",
        "label": "Clipster üìÅ"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "submenu": "clipsterMenu",
          "group": "navigation"
        }
      ],
      "clipsterMenu": [
        {
          "command": "clipster.copyFileContentWithHeader"
        },
        {
          "command": "clipster.copyFolderStructure"
        },
        {
          "command": "clipster.copyFolderStructureAndContent"
        },
        {
          "command": "clipster.copyRootFolderPath"
        },
        {
          "command": "clipster.copyRootFolderStructure"
        },
        {
          "command": "clipster.copyRootFolderStructureAndContent"
        }
      ]
    }
  },
  "dependencies": {
    "picomatch": "^4.0.2"
  }
}
