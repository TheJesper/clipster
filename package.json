{
  "name": "clipster",
  "displayName": "Clipster",
  "version": "1.1.22",
  "description": "A VS Code extension to copy paths, folder structures, and contents with customization.",
  "main": "src/extension.js",
  "publisher": "jesperwilfing",
  "scripts": {
    "clean": "rimraf ./out",
    "build": "npx @vscode/vsce package",
    "bump-build": "standard-version && npm run build",
    "clean-build-install": "npm run clean && npm run bump-build && npm run install-extension",
    "install-extension": "node ./build.js",
    "release": "standard-version"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/TheJesper/clipster"
  },
  "keywords": [
    "vscode",
    "extension",
    "clipboard",
    "root path",
    "folder structure",
    "file content"
  ],
  "author": "jesperwilfing",
  "license": "MIT",
  "devDependencies": {
    "@vscode/vsce": "^2.15.0",
    "standard-version": "^9.3.2",
    "rimraf": "^3.0.2"
  },
  "icon": "resources/icon.png",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:clipster.copyFileContentWithHeader",
    "onCommand:clipster.copyFolderStructure",
    "onCommand:clipster.copyFolderStructureAndContent",
    "onCommand:clipster.copyRootFolderPath",
    "onCommand:clipster.copyRootFolderStructure",
    "onCommand:clipster.copyRootFolderStructureAndContent"
  ],
  "contributes": {
    "submenus": [
      {
        "id": "Clipster",
        "label": "Clipster üìÅ"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "clipster.copyFileContentWithHeader",
          "when": "explorerResourceIsFile",
          "group": "navigation",
          "submenu": "Clipster"
        },
        {
          "command": "clipster.copyFolderStructure",
          "when": "explorerResourceIsFolder",
          "group": "navigation",
          "submenu": "Clipster"
        },
        {
          "command": "clipster.copyFolderStructureAndContent",
          "when": "explorerResourceIsFolder",
          "group": "navigation",
          "submenu": "Clipster"
        },
        {
          "command": "clipster.copyRootFolderPath",
          "when": "explorerResourceIsFile || explorerResourceIsFolder",
          "group": "navigation",
          "submenu": "Clipster"
        },
        {
          "command": "clipster.copyRootFolderStructure",
          "when": "explorerResourceIsFile || explorerResourceIsFolder",
          "group": "navigation",
          "submenu": "Clipster"
        },
        {
          "command": "clipster.copyRootFolderStructureAndContent",
          "when": "explorerResourceIsFile || explorerResourceIsFolder",
          "group": "navigation",
          "submenu": "Clipster"
        }
      ]
    }
  }
}
