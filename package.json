{
  "name": "clipster",
  "displayName": "Clipster",
  "version": "1.1.130",
  "description": "A VS Code extension to copy paths, folder structures, and contents with customization.",
  "main": "src/extension.js",
  "activationEvents": [
    "onCommand:clipster.copyFileContentWithHeader",
    "onCommand:clipster.copyFolderStructure",
    "onCommand:clipster.copyFolderStructureAndContent",
    "onCommand:clipster.copyRootFolderPath",
    "onCommand:clipster.copyRootFolderStructure",
    "onCommand:clipster.copyRootFolderStructureAndContent"
  ],
  "publisher": "jesperwilfing",
  "scripts": {
    "clean": "rimraf ./out",
    "build": "npm run clean && node -e \"const version = require('./package.json').version; require('fs').mkdirSync('./out', {recursive: true}); require('child_process').execSync(`vsce package --out ./out/clipster-${version}.vsix`, {stdio: 'inherit'})\"",
    "bump-build": "standard-version --no-verify && npm run build",
    "clean-build-install": "npm run clean && npm run bump-build && npm run install-extension",
    "install-extension": "node ./build.js",
    "release": "standard-version"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/TheJesper/clipster"
  },
  "keywords": [
    "vscode",
    "extension",
    "clipboard",
    "root path",
    "folder structure",
    "file content"
  ],
  "author": "jesperwilfing",
  "license": "MIT",
  "devDependencies": {
    "@vscode/vsce": "^2.15.0",
    "rimraf": "^3.0.2",
    "standard-version": "^9.3.2"
  },
  "dependencies": {
    "ignore": "^6.0.2"
  },
  "icon": "resources/icon.png",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Clipster Settings",
      "properties": {
        "clipster.showCopyFileContentWithHeader": {
          "type": "boolean",
          "default": true,
          "description": "Enable Copy File Content with Path."
        },
        "clipster.showCopyFolderStructure": {
          "type": "boolean",
          "default": true,
          "description": "Enable Copy Folder Structure."
        },
        "clipster.showCopyFolderStructureAndContent": {
          "type": "boolean",
          "default": true,
          "description": "Enable Copy Folder Structure and Content."
        },
        "clipster.showCopyRootFolderPath": {
          "type": "boolean",
          "default": true,
          "description": "Enable Copy Root Folder Path."
        },
        "clipster.showCopyRootFolderStructure": {
          "type": "boolean",
          "default": true,
          "description": "Enable Copy Root Folder Structure."
        },
        "clipster.showCopyRootFolderStructureAndContent": {
          "type": "boolean",
          "default": true,
          "description": "Enable Copy Root Folder Structure and Content."
        },
        "clipster.showInClipsterSubmenu": {
          "type": "boolean",
          "default": true,
          "description": "Show Clipster commands in submenu."
        },
        "clipster.additionalIgnores": {
          "type": "array",
          "default": [],
          "description": "Additional file patterns to ignore when copying folder structures."
        }
      }
    },
    "commands": [
      {
        "command": "clipster.copyFileContentWithHeader",
        "title": "üìù Copy File Content with Path"
      },
      {
        "command": "clipster.copyFolderStructure",
        "title": "üìÅ Copy Folder Structure"
      },
      {
        "command": "clipster.copyFolderStructureAndContent",
        "title": "üìÅ Copy Folder Structure and Content"
      },
      {
        "command": "clipster.copyRootFolderPath",
        "title": "üìÅ Copy Root Folder Path"
      },
      {
        "command": "clipster.copyRootFolderStructure",
        "title": "üìÅ Copy Root Folder Structure"
      },
      {
        "command": "clipster.copyRootFolderStructureAndContent",
        "title": "üìù Copy Root Folder Structure and Content"
      }
    ],
    "submenus": [
      {
        "id": "clipsterMenu",
        "label": "Clipster üìÅ"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "submenu": "clipsterMenu",
          "group": "2_copy"
        }
      ],
      "clipsterMenu": [
        {
          "command": "clipster.copyFileContentWithHeader",
          "when": "config.clipster.showCopyFileContentWithHeader"
        },
        {
          "command": "clipster.copyFolderStructure",
          "when": "config.clipster.showCopyFolderStructure"
        },
        {
          "command": "clipster.copyFolderStructureAndContent",
          "when": "config.clipster.showCopyFolderStructureAndContent"
        },
        {
          "command": "clipster.copyRootFolderPath",
          "when": "config.clipster.showCopyRootFolderPath"
        },
        {
          "command": "clipster.copyRootFolderStructure",
          "when": "config.clipster.showCopyRootFolderStructure"
        },
        {
          "command": "clipster.copyRootFolderStructureAndContent",
          "when": "config.clipster.showCopyRootFolderStructureAndContent"
        }
      ]
    }
  },
  "configurations": {
    "contributes": {
      "configuration": {
        "type": "object",
        "title": "Clipster Settings",
        "properties": {
          "clipster.showMenuOptions": {
            "type": "boolean",
            "default": true,
            "description": "Show Clipster menu options in the context menu."
          },
          "clipster.additionalIgnores": {
            "type": "array",
            "default": [],
            "description": "Additional ignore patterns for folder structure."
          },
          "clipster.showCopyFileContentWithHeader": {
            "type": "boolean",
            "default": true,
            "description": "Show 'Copy File Content with Path' option."
          },
          "clipster.showCopyFolderStructure": {
            "type": "boolean",
            "default": true,
            "description": "Show 'Copy Folder Structure' option."
          },
          "clipster.showCopyFolderStructureAndContent": {
            "type": "boolean",
            "default": true,
            "description": "Show 'Copy Folder Structure and Content' option."
          },
          "clipster.showCopyRootFolderPath": {
            "type": "boolean",
            "default": true,
            "description": "Show 'Copy Root Folder Path' option."
          },
          "clipster.showCopyRootFolderStructure": {
            "type": "boolean",
            "default": true,
            "description": "Show 'Copy Root Folder Structure' option."
          },
          "clipster.showCopyRootFolderStructureAndContent": {
            "type": "boolean",
            "default": true,
            "description": "Show 'Copy Root Folder Structure and Content' option."
          }
        }
      }
    }
  }
}
